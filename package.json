{
  "name": "devtools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run build:widget",
    "build": "TURBOPACK=0 next build",
    "postbuild": "node scripts/postbuild.js",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:widget": "cd widget && npm install --include=dev && npx vite build",
